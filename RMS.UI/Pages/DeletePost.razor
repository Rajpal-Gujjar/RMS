@page "/deletePost/{userId:int}"
@inject HttpClient Http
@inject NavigationManager navigationManager
<div class="container shadow p-3 rounded mt-md-5">
    <h2 class="text-center text-danger">Delete Post</h2>
    <br />
    <div class="form-group">
        <h4>Do you want to delete this user?</h4>
        <table class="table">
            <tbody>
                <tr>
                    <td>No Of Posts</td>
                    <td>@jobPost.NoOfPosts</td>
                </tr>
                <tr>
                    <td>Qualification</td>
                    <td>@jobPost.Qualification</td>
                </tr>
                <tr>
                    <td>Experience</td>
                    <td>@jobPost.Experience</td>
                </tr>
                <tr>
                    <td>Location</td>
                    <td>@jobPost.Location</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="form-group">
        <input type="submit" value="Delete" @onclick="(async () => await RemoveUser(jobPost.Id))" class="btn btn-danger" />
        <input type="submit" value="Cancel" @onclick="(() => Cancel())" class="btn btn-warning" />
    </div>
</div>
